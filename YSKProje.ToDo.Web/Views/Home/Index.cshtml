@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="GirisYap" method="post" class="mt-5 w-50 mx-auto p-4 shadow">
    <h4 class="text-center">Giriş Yap</h4>
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input class="form-control" asp-for="UserName" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Şifre :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" class="form-control" asp-for="Password" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input"/>
        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />

</form>
