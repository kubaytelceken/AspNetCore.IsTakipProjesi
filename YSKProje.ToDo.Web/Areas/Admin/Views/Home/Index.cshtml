                                <i class="fas fa-chevron-circle-right mr-2"></i> İncele
                            </a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text display-4">0</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-primary text-center mb-3" style="max-width: 30rem;">
                <div class="card-body">
                    <h4 class="card-title">Tamamlanmış Görev Sayısı</h4>

                    @if (ViewBag.TamamlanmisGorevSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.TamamlanmisGorevSayisi</p>
                    }
                    else
                    {
                        <p class="card-text display-4">0</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
