@model GorevListAllViewModel
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Raporlar.Count > 0)
{
    <a class="btn btn-info mt-2">Excel'de Görüntüle</a>
    <table class="table table-hover table-sm">
        <tr>
            <th>@Model.AppUser.Name @Model.AppUser.Surname personelinizin @Model.Ad görevine yazmış olduğu raporlar </th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var rapor in Model.Raporlar)
        {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname personeliniz şuanda @Model.Ad görevi üzerinde çalışıyor. Henüz bir rapor yazmamış.
    </div>
}

